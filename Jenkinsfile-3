pipeline {
    agent any
    stages {
        // use docker in host pc
        stage("Verify docker tooling in Master") {
            steps {
                sh '''
                    docker info
                    docker version
                    docker-compose version
                '''
            }
        }

        // use agent by installing Docker Pipeline plugin
        stage("Verify agent Docker") {
            agent { dockerfile true }
            steps {
                sh '''
                    node --version
                    git --version
                    curl --version
                '''
            }
        }

        // use agent by using ssh connect to vps
        stage("Verify agent linux") {
            agent { 
                label 'agent-linux-001'
            }
            steps {
                sh '''
                    node --version
                    nginx -v
                    echo 'HELLO AGENT LINUX001'
                '''
            }
        }
    }
}

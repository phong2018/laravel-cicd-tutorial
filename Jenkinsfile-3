pipeline {
    agent any
    stages {
        stage("Verify docker tooling in Agent") {
            steps {
                sh '''
                    docker info
                    docker version
                    docker-compose version
                '''
            }
        }
        stage("Verify agent Docker") {
            agent { dockerfile true }
            steps {
                sh 'docker version'
            }
        }
        stage("Verify agent linux") {
            agent { 
                label 'agent-linux-001'
            }
            steps {
                sh 'node --version'
            }
        }
    }
}

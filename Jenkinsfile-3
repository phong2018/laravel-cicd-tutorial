pipeline {
    agent any
    parameters {
        booleanParam(name: 'ALLOW_SUPERUSER', defaultValue: true, description: 'Allow running composer as superuser?')
    }
    stages {
        // use docker in host pc
        stage("Verify docker tooling in Master") {
            steps {
                sh '''
                    docker info
                    docker version
                    docker-compose version
                '''
            }
        }

        // use agent by installing Docker Pipeline plugin
        stage("Verify agent Docker") {
            agent { dockerfile true }
            steps {
                sh '''
                    node --version
                    git --version
                    curl --version
                '''
            }
        }

        // use agent by using ssh connect to vps
        stage("Verify agent linux") {
            agent { 
                label 'agent-linux-001'
            }
            steps {
                sh '''
                    whoami
                    nginx -v
                    node -v
                    npm -v
                    php -v
                '''
                script {
                    if (params.ALLOW_SUPERUSER) {
                        echo "Running Composer as superuser"
                        sh '''
                        export COMPOSER_ALLOW_SUPERUSER=1
                        composer -v
                        '''
                    } else {
                        echo "Running Composer without superuser privileges"
                        sh 'composer -v'
                    }
                }
            }
        }
    }
}
